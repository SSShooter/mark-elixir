{
  "compilerOptions": {
    "rootDir": "./src",
    "skipLibCheck": true,
    "lib": ["es2022", "webworker"],
    "types": ["vscode", "node"],
    "module": "Preserve",
    "moduleResolution": "Bundler",
    "outDir": "./out",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "declaration": true,
    "stripInternal": true,
    "sourceMap": true,
    "declarationMap": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "exclude": ["node_modules", "./src/webview"],
  "references": [{ "path": "./src/webview" }]
}
